<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<table class="table table-stripped table-hover">
  <thead>
    <th>Product Line</th>
    <th>Product Category</th>
    <th>Product Name</th>
    <th>Code</th>
    <th>Active</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @products.each do |prod| %>
      <tr>
        <td> <%= prod.product_line %> </td>
        <td> <%= prod.product_category %> </td>
        <td> <%= prod.name %> </td>
        <td> <%= prod.code %> </td>
        <td> <%= prod.active %> </td>
        <td> 
          <%= link_to "Edit", edit_product_path(prod), class: "btn btn-outline-info btn-sm" %> 
          <%= link_to "Delete", product_path(prod), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New product", new_product_path %>
