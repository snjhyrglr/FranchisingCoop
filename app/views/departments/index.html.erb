<p style="color: green"><%= notice %></p>

<h1>Departments</h1>

<table class="table">
  <thead>
    <%= content_tag :th, 'ID' %>
    <%= content_tag :th, 'Name' %>
    <%= content_tag :th, 'Division' %>
    <%= content_tag :th, '' %>
  </thead>
  <tbody>
    <% for department in @departments %>
      <tr>
        <%= content_tag :td, department.id %>
        <%= content_tag :td, department.name %>
        <%= content_tag :td, link_to(department.division, department.division) %>
        <td>
          <%= link_to 'View', department %>
          <%= link_to 'Edit', edit_department_path(department) %>
          <%= link_to 'Delete', department, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New department", new_department_path %>
