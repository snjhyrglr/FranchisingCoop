
<%# render @region %>
<%= content_tag :h1, @region %>

<div class="digg_pagination mb-3 float-end">
  <%= will_paginate @cooperatives, :container => false %>
</div>

<table class="table table-stripped table-hover">
  <thead>
    <th>Name</th>
    <th>Registration No.</th>
    <th>Category</th>
    <th>Type</th>
    <th>Status</th>
    <th>Asset Size</th>
    <th>Total Asset (in millions)</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @cooperatives.each do |coop| %>
      <tr>
        <td><%= coop.name %></td>
        <td><%= coop.registration_no %></td>
        <td><%= coop.category %></td>
        <td><%= coop.coop_type %></td>
        <td><%= coop.status %></td>
        <td><%= coop.asset_size %></td>
        <td><%= number_to_currency(coop.total_asset, locale: :ph) %></td>
        <td>
          <%= link_to "Edit", edit_cooperative_path(coop), class: "btn btn-outline-info btn-sm" %>
          <%= link_to "Delete", cooperative_path(coop), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>



<div>
  <%= link_to "Edit this region", edit_region_path(@region) %> |
  <%= link_to "Back to regions", regions_path %>

  <%= button_to "Destroy this region", @region, method: :delete %>
</div>
