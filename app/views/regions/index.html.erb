<p style="color: green"><%= notice %></p>

<h1>Regions</h1>

<table class="table table-stripped table-hover">
  <thead>
    <th>Name</th>
    <th>PSGC Code</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @regions.each do |region| %>
      <tr> 
        <td><%= link_to region.name, region, class: "link-secondary" %></td> 
        <td><%= region.psgc_code %></td>
        <td>
          <%= link_to 'Edit', edit_region_path(region), class: "btn btn-outline-info btn-sm" %> | 
          <%= link_to 'Delete', region_path(region), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
  </tbody>
  <% end %>
</table>

<%= link_to "New region", new_region_path %>
